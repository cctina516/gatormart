<body>
  <div class="main-container">
    <header>
      <!-- Navbar -->

      <!-- Navbar -->

    </header>
    <!-- Header Ends-->

    <div class="page-wrap">
                <div class="container">
                    <div class=" text-center mt-5 ">
                        <h1>Send a Message</h1>
                    </div>
                    <div class="row ">
                        <div class="col-lg-7 mx-auto">
                            <div class="card mt-2 mx-auto p-4 bg-light">
                                <div class="card-body bg-light">
                                    <div class="container">
                                        <form id="contact-form" role="form">
                                            <div class="controls">
                                                <div class="row">
                                                    <div class="col-md-12 item">
                                                        <div class="item float-right">
                                                            <p><small><span>*</span> required fields</small></p>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6 item">
                                                        <div class="form-group"> <label for="form_name">Firstname <span>*</span></label>
                                                            <input id="form_name" type="text" name="name" class="form-control"
                                                                required="required" data-error="Firstname is required.">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6 item">
                                                        <div class="form-group"> <label for="form_lastname">Lastname
                                                                <span>*</span></label>
                                                            <input id="form_lastname" type="text" name="surname" class="form-control"
                                                                required="required" data-error="Lastname is required.">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6 item">
                                                        <div class="form-group"> <label for="form_email">Item Name
                                                                <span>*</span></label>
                                                            <input id="form_email" type="email" name="email" class="form-control"
                                                                required="required" data-error="Valid email is required.">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6 item">
                                                        <div class="form-group"> <label for="form_need">Choose Pickup Location
                                                                <span>*</span></label>
                                                            <select id="form_need" name="need" class="form-control" required="required"
                                                                data-error="Please select the location.">
                                                                <option value="" selected disabled>--Select Location--</option>
                                                                <option>SFSU BookStore</option>
                                                                <option>SFSU Library</option>
                                                                <option>SFSU Burk Building</option>
                                                                <option>Other</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-12 item">
                                                        <div class="form-group"> <label for="form_message">Message
                                                                <span>*</span></label>
                                                            <textarea id="form_message" name="message" class="form-control"
                                                                placeholder="Write your message here." rows="4" required="required"
                                                                data-error="Please, leave us a message."></textarea>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12"> <input type="submit"
                                                            class="btn btn-success btn-send pt-2 btn-block" value="Send Message"> </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div> 
                        </div> 
                    </div>
                </div>
    </div>
    <!-- Footer Starts-->

  </div>
  <!-- Footer Ends-->
  </div>
