  -->

<body>
  <div class="main-container">
    <div class="page-wrap">
      <div class="login-container">
        <div class="login-left">
          <div class="login-label">Welcome Back, Gators!</div>
        </div>
        <form class="login-right" method="POST" action="/auth/login">
          <fieldset class="form">
            <div class="login-h1">
              SFSU email<span class="login-check"> *</span></div>
            <input id="text-box" type="text" placeholder="SFSU Email" required name="email">
            <br />
            <div class="login-h1">Password<span class="login-check"> *</span></div>
            <input id="text-box" type="password" placeholder="Password" required name="password">
            <br />
              {{err}}
            <br>
            <button type="submit" id="login-button">Submit</button><br />
            <a href="#" id="login-links">Forgot Password</a>
            <br />
            <a href="registration" id="login-links">New to GatorMart? Sign Up!</a>
          </fieldset>
        </form>
      </div>
    </div>
    <!-- Footer Starts-->

  </div>
  <!-- Footer Ends-->
