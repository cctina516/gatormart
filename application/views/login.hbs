<!--
      FILE: views/login.hbs
      DESCRIPTION: This page allows the user to log in with their SFSU email and password.

      ADDED BY: Melissa Ho
  -->

<body>
  <div class="main-container">
    <div class="page-wrap">
      <div class="login-container">
        <div class="login-left">
          <div class="login-label">Welcome Back, Gators!</div>
        </div>
        <form class="login-right" method="POST" action="/auth/login">
          <fieldset class="login-form">
            <div class="login-h1">
              SFSU email<span class="login-check"> *</span></div>
            <input id="text-box" type="text" placeholder="SFSU Email" required name="email">
            <br />
            <div class="login-h1">Password<span class="login-check"> *</span></div>
            <input id="text-box" type="password" placeholder="Password" required name="password">
            <br />
              {{err}}
            <br>
            <button type="submit" id="login-button">Submit</button><br />
            <!-- Forgot password link trigger modal -->
            <div data-toggle="modal" data-target="#exampleModalCenter">
            <a href="#" id="login-links">Forgot Password</a></div>
                <!-- Modal -->
                <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
                  aria-hidden="true">
                  <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Forgot your password?</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body">
                        <form>
                          <div class="form-group">
                            <label for="email">Enter SFSU Email Address</label>
                            <input type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="SFSU Email" required>
                          </div>                         
                            <p>Enter the SFSU email address you used for registration. We'll send a link to this address for you to reset the password.</p>                          
                        </form>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary certain">Submit</button>
                      </div>
                    </div>
                  </div>
                </div>
            New to GatorMart?<a href="registration" id="login-links"> Sign Up!</a>
          </fieldset>
        </form>
      </div>
    </div>
    <!-- Footer Starts-->

  </div>
  <!-- Footer Ends-->
  </div>
